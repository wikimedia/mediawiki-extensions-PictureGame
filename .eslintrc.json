{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery"
	],
	"globals": {
		"OO": false,
		"jQuery": false,
		"mw": false
	},
	"rules": {
		"camelcase": "warn",
		"eqeqeq": "warn",
		"no-undef": "warn",
		"one-var": "warn",
		"vars-on-top": "warn",
		"no-alert": "warn",
		"no-shadow": "warn",
		"no-unused-vars": "warn",
		"no-implicit-globals": "warn",
		"max-statements-per-line": "warn",
		"no-jquery/variable-pattern": "warn",
		"no-jquery/no-fade": "warn",
		"no-jquery/no-global-selector": "warn"
	}
}
