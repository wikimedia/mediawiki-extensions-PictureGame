{
	"root": true,
	"extends": [
		"wikimedia/client-es5",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"globals": {
		"jQuery": false
	},
	"rules": {
		"camelcase": "warn",
		"eqeqeq": "warn",
		"no-undef": "warn",
		"no-alert": "warn",
		"no-shadow": "warn",
		"no-unused-vars": "warn",
		"no-implicit-globals": "warn",
		"max-statements-per-line": "warn",
		"no-jquery/variable-pattern": "warn",
		"no-jquery/no-fade": "warn",
		"no-jquery/no-global-selector": "warn"
	}
}
